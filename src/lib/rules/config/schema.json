{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["stateCode", "stateName", "programs", "incomeLimits", "metadata"],
  "properties": {
    "stateCode": {
      "type": "string",
      "minLength": 2,
      "maxLength": 4,
      "description": "State abbreviation (e.g., KY, TEST)"
    },
    "stateName": {
      "type": "string",
      "minLength": 1,
      "description": "Full state name"
    },
    "coverageLevel": {
      "type": "string",
      "enum": ["full", "federal-only"],
      "description": "Level of coverage for this state"
    },
    "programs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["programId", "programName", "conditions", "event"],
        "properties": {
          "programId": {
            "type": "string"
          },
          "programName": {
            "type": "string"
          },
          "conditions": {
            "type": "object",
            "description": "json-rules-engine conditions"
          },
          "event": {
            "type": "object",
            "description": "json-rules-engine event payload"
          },
          "enrichment": {
            "type": "object",
            "properties": {
              "eligibleReasons": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["condition", "reason"],
                  "properties": {
                    "condition": { "type": "string" },
                    "incomeLimitKey": { "type": "string" },
                    "reason": { "type": "string" }
                  }
                }
              },
              "ineligibleReasons": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["condition", "reason"],
                  "properties": {
                    "condition": { "type": "string" },
                    "incomeLimitKey": { "type": "string" },
                    "minAge": { "type": "number" },
                    "reason": { "type": "string" }
                  }
                }
              },
              "nextSteps": {
                "type": "array",
                "items": { "type": "string" }
              },
              "requiredDocuments": {
                "type": "array",
                "items": { "type": "string" }
              },
              "priority": {
                "type": "number",
                "minimum": 1
              }
            }
          }
        }
      }
    },
    "incomeLimits": {
      "type": "object",
      "description": "Income limits by program and household size",
      "patternProperties": {
        "^[a-zA-Z-]+$": {
          "type": "object",
          "patternProperties": {
            "^[0-9]+$": {
              "type": "number",
              "minimum": 0
            }
          }
        }
      }
    },
    "benefitInteractions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["programs", "description", "recommendation"],
        "properties": {
          "programs": {
            "type": "array",
            "items": { "type": "string" }
          },
          "requiresInsurance": { "type": "boolean" },
          "description": { "type": "string" },
          "recommendation": { "type": "string" }
        }
      }
    },
    "actionPlanOrder": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["programName", "step"],
        "properties": {
          "programName": { "type": "string" },
          "step": { "type": "string" },
          "combinedWith": { "type": "string" },
          "combinedStep": { "type": "string" },
          "withMedicaidStep": { "type": "string" }
        }
      }
    },
    "metadata": {
      "type": "object",
      "required": ["lastUpdated", "source", "effectiveDate"],
      "properties": {
        "lastUpdated": {
          "type": "string"
        },
        "source": {
          "type": "string"
        },
        "effectiveDate": {
          "type": "string"
        }
      }
    }
  }
}
