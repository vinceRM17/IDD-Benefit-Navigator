{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["stateCode", "stateName", "programs", "incomeLimits", "metadata"],
  "properties": {
    "stateCode": {
      "type": "string",
      "minLength": 2,
      "maxLength": 4,
      "description": "State abbreviation (e.g., KY, TEST)"
    },
    "stateName": {
      "type": "string",
      "minLength": 1,
      "description": "Full state name"
    },
    "programs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["programId", "programName", "conditions", "event"],
        "properties": {
          "programId": {
            "type": "string"
          },
          "programName": {
            "type": "string"
          },
          "conditions": {
            "type": "object",
            "description": "json-rules-engine conditions"
          },
          "event": {
            "type": "object",
            "description": "json-rules-engine event payload"
          }
        }
      }
    },
    "incomeLimits": {
      "type": "object",
      "description": "Income limits by program and household size",
      "patternProperties": {
        "^[a-z-]+$": {
          "type": "object",
          "patternProperties": {
            "^[0-9]+$": {
              "type": "number",
              "minimum": 0
            }
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "required": ["lastUpdated", "source", "effectiveDate"],
      "properties": {
        "lastUpdated": {
          "type": "string"
        },
        "source": {
          "type": "string"
        },
        "effectiveDate": {
          "type": "string"
        }
      }
    }
  }
}
